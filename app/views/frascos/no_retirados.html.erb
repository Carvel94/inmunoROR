<div id="page-wrapper">
 <div class="container-fluid2">
   <%= render 'shared/dosFilasVistaShow', tituloVentana: "Cambiar estado de frascos preparados"%>

   <div class="row" >       
    <div class="col-md-1"></div>
    <div class="col-md-10">         
      <div class="panel panel-primary" style="margin-bottom: 10px">
        <div class="panel-heading">
          <h3 class="panel-title"></h3>
          <div style="text-align: center"><h3 class="panel-title">Buscador por ID </h3></div>
        </div>
        <div class="panel-body2">
         <div class="list-group" style="margin-bottom: 1px">
           <%=simple_form_for(:paciente, remote: true, url: (frascos_no_retirados_path), method: :get, html: { class: 'form-horizontal' }) do |f| %>

           <%= f.error_notification %>           

           <div class="form-group" style="margin-bottom:5px">
             <label class="control-label col-md-2" >ID del Paciente:</label>
             <div class="col-md-7" style="height:1px">
              <%= f.input :pacID, label: false, placeholder: "Introduzca el ID del paciente a buscar", wrapper_html: { class: 'id' } %> 
            </div>

            <div class="col-md-2">
              <div class="form-actions" align="center">
                <%= f.button :submit, 'Buscar paciente', :class=> "btn-primary" %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
  <div class="col-md-1"></div>
</div> <!-- /.row -->

<div id="loading-indicator" style="margin-bottom: 5px">
 <%= image_tag("ajax-loader.gif", :id => "loading-indicator", :style => "display:none") %>
</div>

<div class="row">
<div class="col-md-10 col-md-offset-1" id="lista_nr">
   <%#= render @pacientes %>
 </div>
</div>

</div><!-- /.container-fluid -->
</div><!-- /#page-wrapper -->
