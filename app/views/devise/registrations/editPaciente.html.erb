    </div>
    <label class="control-label col-md-3">CUC:</label>
      <div class="col-md-1">             
      <%= f.input :cuc, label: false, as: :string, :input_html => {value: @paciente.ava}%> 
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-2">HONG:</label>
      <div class="col-md-1">             
      <%= f.input :hong, label: false, as: :string, :input_html => {value: @paciente.ava}%>     
    </div>
    <label class="control-label col-md-3">BERM:</label>
      <div class="col-md-1">             
      <%= f.input :berm, label: false, as: :string, :input_html => {value: @paciente.berm}%> 
      </div>
   </div>
   <div class="form-group">
    <label class="control-label col-md-2">JOHN:</label>
      <div class="col-md-1">             
      <%= f.input :john, label: false, as: :string, :input_html => {value: @paciente.john}%> 
    </div>
    <label class="control-label col-md-3">ASP:</label>
      <div class="col-md-1">             
      <%= f.input :asp, label: false, as: :string, :input_html => {value: @paciente.asp}%> 
    </div>
   </div>
   <div class="form-group">
    <label class="control-label col-md-2">BLOM:</label>
      <div class="col-md-1">             
      <%= f.input :blom, label: false, as: :string, :input_html => {value: @paciente.blom}%> 
    </div>
  </div>
</div>

<div class="form-actions" align="center">
<%= f.button :submit, "Modificar datos", :class=> "btn btn-primary" %>
</div>
</div>
<% end %>
