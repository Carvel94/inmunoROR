        <!-- Page Heading -->       
        <div class="row" style= "margin-top:25px">
          <div class="col-lg-2"></div>
          <div class="col-lg-8">
            <div class="panel panel-primary">
              <div class="panel-heading">
                <h3 class="panel-title"></h3>
                <div style="text-align: center">
                  <h3 class="panel-title">Modificar datos</h3>
                </div>
              </div>
              <div class="panel-body">
                <div class="list-group">
                <%puts "AQUI14"%>

                 <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>

                  <%#= simple_form_for(resource, as: resource_name, url: edit_paciente_registration_path(@paciente), html: { method: :put, class: 'form-horizontal' }) do |f| %>
                  <%puts "AQUI15"%>
                   <%=f.input :id, :as => :hidden, :input_html => { :value => @paciente.id } %>
                     
                     <%= f.error_notification %>


                       <div class="form-group">
                        <label class="control-label col-md-2" ><abbr title="required">*</abbr> Historia N.:</label>
                        <div class="col-md-3">
                           <%= f.input :historia, label: false, placeholder: "Número de historia",wrapper_html: { class: 'username' },:input_html => {value: @paciente.historia, :maxlength => 7, :size => 7, :style=> 'width: 80px;'}  %>
                        </div>

                        <label class="control-label col-md-3" >Nombre de usuario:</label>
                        <div class="col-md-3">
                        
                        <%= f.input :username, label: false, :required => true, readonly: true, placeholder: "Username", :input_html => {value: numero_tratamiento(@paciente)}%>
                        
                        </div>
                     </div>

                     <div class="form-group">
                        <label class="control-label col-md-2" ><abbr title="required">*</abbr> Nombres:</label>
                        <div class="col-md-3">
                           <%= f.input :nombre, label: false, :required => true, placeholder: "Coloque el(los) nombre(s)",:input_html => {value: @paciente.nombre}%> 
                        </div>
                        <label class="control-label col-md-3"><abbr title="required">*</abbr> Apellidos:</label>
                        <div class="col-md-3">
                           <%= f.input :apellido, label: false, :required => true, placeholder: "Coloque el(los) apellidos(s)",:input_html => {value: @paciente.apellido}%>  
                        </div>
                     </div>

                     <div class="form-group">
                        <label class="control-label col-md-2">C.I.:</label>
                        <div class="col-md-3">
                           <%= f.input :cedula, label: false, placeholder: "Número de cédula" , :input_html => {value: @paciente.cedula}%>
                        </div>

                         <label class="string optional control-label col-md-3">Fecha nacimiento:</label>

                         
                           <div class='input-group date col-md-3' id='datetimepicker1'>
                           <input class="string optional form-control"  type="text" name="usuario[fecha_nacimiento]" id="usuario_fecha_nacimiento" value = <%=existe_fecha(@paciente.fecha_nacimiento) %> />
                           <span class="input-group-addon">
                           <i class="fa fa-calendar"></i>
                           </span>
                           </div>
                        </div>
                       
                     
                     <div class="form-group">
                        <label class="control-label col-md-2"><abbr title="required">*</abbr> Teléfono Hab:</label>
                        <div class="col-md-3">
                           <%= f.input :telefono_habitacion, label:false, placeholder: "Teléfono de habitación", wrapper_html: { class: 'username' },:input_html => {value: @paciente.telefono_habitacion}%>
                        </div>
                        <label class="control-label col-md-3">Teléfono Oficina:</label>
                        <div class="col-md-3">
                           <%= f.input :telefono_trabajo, label: false, placeholder: "Teléfono de oficina", wrapper_html: { class: 'username' }, :input_html => {value: @paciente.telefono_trabajo}%>
                        </div>
                     </div>
                     <div class="form-group">
                        <label class="control-label col-md-2"><abbr title="required">*</abbr> Celular 1:</label>
                        <div class="col-md-3">
                           <%= f.input :celular1, label: false, placeholder: "Teléfono celular",:input_html => {value: @paciente.celular1}%>
                        </div>
                        <label class="control-label col-md-3">Celular 2:</label>
                        <div class="col-md-3">                            
                           <%= f.input :celular2, label: false, placeholder: "Teléfono celular", :input_html => {value: @paciente.celular2}%>
                        </div>
                     </div>
                     <div class="form-group">
                        <label class="control-label col-md-2"><abbr title="required">*</abbr> E-mail:</label>
                        <div class="col-md-3">          
                           <%= f.input :email, label: false, placeholder: "usuario@dominio.com", :input_html => {value: @paciente.email}%>
                        </div>
                        <label class="control-label col-md-3"><abbr title="required">*</abbr> Confirmación E-mail:</label>
                        <div class="col-md-3">                              
                           <%= f.input :email_confirmation, label: false, placeholder: "usuario@dominio.com"%>
                        </div>
                     </div>
                     <div class="form-group">
                        <label class="control-label col-md-2">E-mail 2:</label>
                        <div class="col-md-3">          
                           <%= f.input :email2, label: false, placeholder: "usuario@dominio.com", :input_html => {value: @paciente.email2}%>
                        </div>
                        <label class="control-label col-md-3">Confirmación E-mail 2:</label>
                        <div class="col-md-3">             
                           <%= f.input :email2_confirmation, label: false, placeholder: "usuario@dominio.com" %>
                        </div>
                     </div>

 

<%= f.button :button, type: :button, id: "botonPruebas", class: 'btn btn-success' do %>
