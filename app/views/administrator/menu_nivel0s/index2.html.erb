<div id="page-wrapper">
  <div class="container-fluid">
   <%= render 'shared/dosFilasVistas', tituloVentana: "Menú Principal" %>

    <%if !@administrator_menu_nivel0s.empty?%>
    
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-8">
        <div class="list-group">
          <a href="#" class="list-group-item active">
            <div align="center">
              <h4 class="list-group-item-heading">Administración del menú principal</h4>
            </div>
          </a>
        </div>
       <!-- <div  align="right">
          <%#= button_to "Agregar pregunta", new_administrator_faq_path, :method => "get", :class=> "btn btn-primary" %>
        </div>
        <br />
  -->
        <% @administrator_menu_nivel0s.each_with_index do |opcion,i| %>
        <div class="panel-group" id="accordion-<%=i.to_s%>">
          <div class="panel panel-info">
            <div class="panel-heading">
              <h4 class="panel-title">
                

                <a data-toggle="collapse" data-parent="#accordion-<%=i.to_s%>" href="#collapse1-<%=i.to_s%>">
                  <%=opcion.titulo.html_safe%></a>

                <div class="pull-right">
                  <div class="controls">
                    Posición en Menú:&nbsp; <%=opcion.posicion%>&nbsp;&nbsp;| <a data-toggle="collapse" data-parent="#accordion-<%=i.to_s%>" href="#collapse1-<%=i.to_s%>"><span class="fa fa-fw fa-search"></span></a>
                    
                   

                    <%=link_to edit_administrator_menu_nivel0_path(opcion),
                    title: 'Actualizar la pregunta',
                     'data-toggle' => 'tooltip',
                     'data-placement' => 'right' do %>
                    <span class="fa fa-fw fa-pencil"></span>
                    <%end%>
                    

                    <%#=link_to  administrator_menu_nivel0_path(opcion), method: :delete, 
                    title: 'Eliminar la pregunta',
                     'data-toggle' => 'tooltip',
                     'data-placement' => 'right',
                     data: { confirm: 'Esta seguro que desea eliminar la pregunta?' }  do %>
                    <!--<span class="fa fa-fw fa-trash-o"></span> -->
                    <%#end%>
                  </div>
                </div>
              </h4>
            </div>
            <div id="collapse1-<%=i.to_s%>" class="panel-collapse collapse out">
              <div class="panel-body">

            <form class="form-horizontal">
  <div class="form-group" style="margin-bottom:2px">
    <label class="col-sm-5 control-label">Visible en el menú:</label>
    <div class="col-sm-5">
      <p class="form-control-static">
        <%=opcion.estado ? "Si" : "No" %></p>
    </div>
  </div>
  <div class="form-group" style="margin-bottom:2px">
    <label  class="col-sm-5 control-label">Tipo de opción:</label>
    <div class="col-sm-5">
      <p class="form-control-static">
      <% if opcion.tipo == 0%>
          Opción principal en el menú
      <%else%>
        <%if opcion.tipo ==1%>
           Submenu de opción principal
        <%end%>
      <%end%>
      </p>
    </div>
  </div> 
   <div class="form-group" style="margin-bottom:2px">
    <label  class="col-sm-5 control-label">Es un enlace a una página?</label>
       <div class="col-sm-5">
        <p class="form-control-static">
        <% if opcion.enlace.empty?%>
          No
         <%else%>
          Si
          <%end%>
          </p>      
    </div>
  </div>
  <div class="form-group" style="margin-bottom:2px">
    <label  class="col-sm-5 control-label">Posición en el menú principal:</label>
    <div class="col-sm-5">
      <p class="form-control-static">
      <%=opcion.posicion%>
      </p>
    </div>
  </div> 
</form>



              </div>
            </div>
          </div>
        </div>
        <%end%>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
  <% end %>
  <!-- /.row 
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8" align="right">
      <%#= button_to "Agregar pregunta", new_administrator_faq_path, :method => "get", :class=> "btn btn-primary" %>
    </div>
    <div class="col-lg-2"></div>
  </div>
  -->
</div>
<!-- /.container-fluid -->
</div><!-- /#page-wrapper -->