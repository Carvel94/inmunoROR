    <div id="page-wrapper">

<div class="container-fluid">
 <div class="col-lg-12">
            <%if !flash.empty? %>
            <br />  
            <% flash.each do |key, value| %>
            <div class="alert alert-success fade in">
              <a class="close" data-dismiss="alert" href="#">&times;</a>
              <strong><%=value%></strong>
            </div>
            <% end %>
          <%end%>  
          </div>
                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h2 class="page-header">Paciente: <%=current_usuario.nombre + "  "+ current_usuario.apellido%> </h2>
                    </div>
                </div>
                <!-- /.row -->

                <% if @contactos.length > 0%>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="alert alert-info alert-dismissable">
                            <strong>Dr(a) <%=current_usuario.nombre + "  "+ current_usuario.apellido%> tiene mensajes por revisar</strong>
                        </div>
                    </div>
                </div>
                <%end%>
                <!-- /.row -->

                <div class="row">
                    <div class="col-lg-3 col-md-6">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <i class="fa fa-comments fa-5x"></i>
                                    </div>
                                    <div class="col-xs-9 text-right">Usted tiene 
                                        <div class="huge"><%=@contactos.length%> </div>
                                        <div>nuevos mensaje(s) sin responder</div>
                                    </div>
                                </div>
                            </div>
                            <a href="#">
                                <div class="panel-footer">
                                    <span class="pull-left">
                                <%=link_to "Ver detalles", administrator_contactos_path%></span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->